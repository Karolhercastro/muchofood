<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_sopas"
    android:layout_margin="12dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imagenSopaVerduras"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

        </ImageView>

        <TextView
            android:id="@+id/tituloSopaVerduras"
            android:layout_width="215dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@id/imagenSopaVerduras"
            android:layout_toRightOf="@id/imagenSopaVerduras"
            android:text="Sopa de verduras"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/precioSopaVerduras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagenSopaVerduras"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="98dp"
            android:layout_toEndOf="@id/imagenSopaVerduras"
            android:text="Precio $8.000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>